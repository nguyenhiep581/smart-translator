{
  "name": "smart-translator",
  "version": "1.0.6",
  "description": "Chrome Extension for translating selected text or screenshots using OpenAI, Claude, or custom AI providers",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{js,css,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html,json}\"",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "check": "pnpm run format:check && pnpm run lint",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "translator",
    "openai",
    "claude",
    "deepl"
  ],
  "author": "nguyenhiep",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.0.0",
    "eslint": "^8.55.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "dompurify": "^3.3.0",
    "franc-min": "^6.2.0",
    "highlight.js": "^11.9.0",
    "katex": "^0.16.25",
    "marked": "^12.0.2"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix --max-warnings 100"
    ],
    "src/**/*.{css,html,json}": [
      "prettier --write"
    ]
  }
}
